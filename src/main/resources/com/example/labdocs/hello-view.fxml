<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.labdocs.HelloController"
          hgap="10"
          vgap="10"
          stylesheets="style.css"
          >

    <Label text="Nome do aluno:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nomeAluno" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="emailAluno" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="telefoneAluno" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Nome do Projeto:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="nomeProjeto" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Data da Coleta:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <DatePicker fx:id="dataColeta" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Hora da Coleta:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="horaColeta" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Número de Amostras:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="numeroAmostras" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <HBox spacing="10" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="8">
        <Label text="Origem da Amostra:"/>
        <CheckBox text="SAA"/>
        <CheckBox text="Rio"/>
        <CheckBox text="Lago"/>
        <CheckBox text="Igarapé"/>
        <CheckBox text="Outro"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="9">
        <Label text="Uso preponderante:"/>
        <CheckBox text="Consumo Humano"/>
        <CheckBox text="Balneabilidade"/>
        <CheckBox text="Outros"/>
    </HBox>


</GridPane>

